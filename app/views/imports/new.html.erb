<div id="new_import"> 
    <div class="card">
        <div class="card-header">
            IMPORTAR 
        </div>
        <div class="card-body">    
            <p class="card-text">Carga el siguiente formato con los datos a registrar, asegurate que estan en el orden, Ejemplo: <a href="/as9d87a9d87a9s8d7a9s87d.xlsx">example.tab<a>  </p>
            <%= form_tag imports_path, multipart: true do %>
            <%= file_field_tag :file  %>   
            <div><%= button_tag "Importar", class: "btn btn-primary mt-5" %> </div>
            <% end %>
        </div>
    </div>
</div>

<% content_for :scripts do %>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var new_import = new Vue({
                delimiters: ['{$', '$}'],
            el: '#new_import',
            data: {},      
        })
        })
    </script>
<% end %>